{
	"suggest.enablePreview": true,
	"codeLens.enable": true,
	"diagnostic.checkCurrentLine": true,
	"diagnostic.errorSign": "✖",
	"diagnostic.warningSign": "⚠",
	"diagnostic.infoSign": "●",
	"diagnostic.hintSign": "○",
	"coc.preferences.formatOnSaveFiletypes": [
		"typescript",
		"javascript",
		"javascript.jsx",
		"typescript.tsx",
		"typescriptreact",
		"javascriptreact",
		"svelte",
		"html",
		"css",
		"json",
		"go"
	],
	"languageserver": {
		"go": {
			"command": "gopls",
			"rootPatterns": [
				"go.mod"
			],
			"trace.server": "verbose",
			"filetypes": [
				"go"
			]
		}
	},
	"go.goplsOptions": {
		"staticcheck": true
	}
}
